<!DOCTYPE html>
<html lang="{{ locale|split('_')[0] }}">
<head>
    <meta charset="UTF-8">
    <title>TwigYard {{ 'Example'|trans }}</title>
    <link rel="stylesheet" href="{{ asset('css/main.css') }}" type="text/css" />
    <!-- GoogleAnalytics tracking code {{ trackingIds.google_analytics }} -->
</head>
<body>
    <header>
        <div class="container">
            <h1><a href="{{ path('index') }}">{{ 'Example'|trans }}</a></h1>
            <nav>
                <ul>
                    <li{% if page == 'index' %} class="active"{% endif %}><a href="{{ path('index') }}">{{ 'Home'|trans }}</a></li>
                    <li{% if page == 'contact' %} class="active"{% endif %}><a href="{{ path('contact') }}">{{ 'Contact'|trans }}</a></li>
                </ul>
                {% block languages %}
                    <ul class="languages">
                        <li{% if locale == 'cs_CZ' %} class="active"{% endif %}><a href ="{{ path(page, {}, 'cs_CZ') }}">Cs</a></li>
                        <li{% if locale == 'en_US' %} class="active"{% endif %}><a href ="{{ path(page, {}, 'en_US') }}">En</a></li>
                    </ul>
                {% endblock %}
            </nav>
        </div>
    </header>
    <section class="container">
        <div class="content">
            {% block content %}{% endblock %}
        </div>
    </section>
    <footer class="container">
        <div class="footer">
            <a href="http://www.twigyard.com/" target="_blank">TwigYard</a>
        </div>
    </footer>
</body>
</html>
